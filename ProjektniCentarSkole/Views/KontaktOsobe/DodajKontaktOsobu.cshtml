<!--Pogled koji sluzi za dodavanje kontakt osobe odredjenoj skoli-->
@model ProjektniCentarSkole.KontaktOsoba


@{
    ViewBag.Title = "Dodaj kontakt osobu";
}

<h2>Dodaj</h2>
<p>@ViewBag.idskola</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ActionLink("Dodaj jos jednu kontakt osobu", "DodajKontaktOsobu", "KontaktOsobe")
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            @Html.LabelFor(model => model.Ime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prezime, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prezime, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prezime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RadnoMesto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RadnoMesto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RadnoMesto, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Dodaj kontakt osobu" class="btn btn-default" />
            </div>
        </div>


    </div>


}

<div>
    @Html.ActionLink("Nazad na listu kontakt osoba", "Index","Skole")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}