<!--Pogled koji prikazuje listu telefona odredjene kontakt osobe-->
@model IEnumerable<ProjektniCentarSkole.Telefon>

@{
    ViewBag.Title = "IndexTelefon";
}

<h2>IndexTelefon</h2>

@Html.ActionLink("Dodaj novi telefon", "DodajTelefon", TempData["idKo"], htmlAttributes: new { @class = "btn btn-primary btn-sm" }) |

<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Oznaka)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Broj)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lokal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KontaktOsoba.Ime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.IdKontaktOsoba == (int)TempData["idKoTel"])
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Oznaka)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Broj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lokal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KontaktOsoba.Ime)
                </td>
                <td>
                    @Html.ActionLink("Izmeni telefon", "IzmeniTelefon", new { id = item.Id }) |
                    @Html.ActionLink("Detalji", "DetaljiTelefon", new { id = item.Id }) |
                    @Html.ActionLink("Obrisi", "ObrisiTelefon", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
