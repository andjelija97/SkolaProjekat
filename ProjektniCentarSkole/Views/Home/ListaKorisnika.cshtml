<!--Pogled koji prikazuje listu registovanih korisnika-->
@model IEnumerable<ProjektniCentarSkole.Models.ApplicationUser>

@{
    ViewBag.Title = "ListaKorisnika";
}

<h2>Lista korisnika</h2>

<a href="DodajKorisnika" class="btn btn-primary">
    Dodaj novog korisnika
</a>
<br/>
<br/>
    <table class="table">
        <tr>
            <th>
                Ime
            </th>
            <th>
                Prezime
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PravaPristupa)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PravaPristupa)
                </td>

                <td>
                    @Html.ActionLink("Izmeni korisnika", "Edit", new { id = item.Id }) |

                    @Html.ActionLink("Obrisi", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
