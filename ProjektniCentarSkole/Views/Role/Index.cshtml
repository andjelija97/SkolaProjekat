<!--Pogled koji prikazuje listu uloga-->
@model IEnumerable<ProjektniCentarSkole.Models.RoleViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista uloga</h2>

<a href="Role/Create" class="btn btn-primary">
    Dodaj novu ulogu
</a>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Izmeni", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Obrisi ulogu", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
